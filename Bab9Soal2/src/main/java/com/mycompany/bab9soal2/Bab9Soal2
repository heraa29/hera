package com.mycompany.bab9soal2;

/**
 *
 * @author Lenovo
 */
public class Bab9Soal2 {

    public static void main(String[] args) {
        // Inisialisasi nilai awal dan nilai akhir
        int nilaiAwal = 3; // Ubah sesuai kebutuhan
        int nilaiAkhir = 15; // Ubah sesuai kebutuhan

        // Menampilkan hasil deret bilangan dengan pertambahan 5
        System.out.print("Hasil deret bilangan : ");

        for (int i = nilaiAwal; i <= nilaiAkhir; i += 5) {
            if (i != nilaiAwal) {
                System.out.print(", ");
            }
            System.out.print(i);
        }
        
        System.out.println(); // Untuk memastikan cursor pindah ke baris berikutnya setelah output
    }
}