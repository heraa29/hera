package com.mycompany.bab7soal2;

/**
 *
 * @author Lenovo
 */
public class Bab7Soal2 {

    public static void main(String[] args) {
        // Menetapkan nilai secara langsung
        String nim = "1111111";
        String nama = "Agustav";
        int tahun = 3;
        char peminatan = 'M';  // Pilihan peminatan: M untuk Pemrograman Mobile, J untuk Pemrograman Java

        // Menampilkan input yang ditetapkan
        System.out.println("### Pendataan Mahasiswa ###");
        System.out.println("NIM : " + nim);
        System.out.println("NAMA : " + nama);
        System.out.println("TAHUN : " + tahun);
        System.out.println("PILIH PEMINATAN : " + peminatan);

        // Menentukan output berdasarkan pilihan peminatan
        System.out.println("\nOutput :");
        switch (peminatan) {
            case 'M':
                System.out.println("PEMROGRAMAN MOBILE");
                // Nested switch untuk tahun
                switch (tahun) {
                    case 1:
                        System.out.println("Dasar Mobile");
                        break;
                    case 2:
                        System.out.println("Pengembangan Aplikasi Mobile");
                        break;
                    case 3:
                        System.out.println("Pemrograman Java 2");
                        break;
                    default:
                        System.out.println("Tahun tidak valid");
                        break;
                }
                break;

            case 'J':
                System.out.println("PEMROGRAMAN JAVA");
                // Nested switch untuk tahun
                switch (tahun) {
                    case 1:
                        System.out.println("Dasar Java");
                        break;
                    case 2:
                        System.out.println("Pengembangan Aplikasi Java");
                        break;
                    case 3:
                        System.out.println("Pemrograman Java Lanjut");
                        break;
                    default:
                        System.out.println("Tahun tidak valid");
                        break;
                }
                break;

            default:
                System.out.println("Pilihan peminatan tidak valid");
                break;
        }
    }
}
                